    return a+b                                               # zarların toplamını returnlüyoruz aksi halde fonksiyon zarları atar ama kaydetmez.
def oyun():
    ilk_zarlar_toplamı = zar_at()                            # ilk zarı atıyoruz ve o anki zarların toplamını bir değişkene atıyoruz.
    if(ilk_zar == 7) or (ilk_zar ==11):                      # atılan ilk zarların toplamı 7 veya 11 ise oyuncu kazanır.
        print("Tebrikler Kazandınız.")
    elif (ilk_zar == 2) or (ilk_zar ==3) or (ilk_zar == 12): # 2,3,12 ise oyuncu kaybeder.
        print("Kaybettiniz.")
    else:                                                    # atılan iki zarın toplamı bu değerlerin dışındaysa 
        k = 0
        while k==0:
            rastgele = zar_at()
            if rastgele == ilk_zar:                          # oyuncu ilk attığı zarları tekrardan atarsa kazanır.
                print("Tebrikler kazandınız.")
                k += 1                                       # oyuncu kazandı bu yüzden k'yı arttırmalıyız aksi halde oyun devam eder.
            elif rastgele == 7:                              # eğer ilk attığı sonucu bulmadan önce 7 atarsa kaybeder.    
                print("Kaybettiniz.")
                k+=1                                         # oyuncu kaybetti bu yüzden k'yı arttırmalıyız aksi halde oyun devam eder.
                                                             # kod if ve elife girmezse while döngüsünde olduğu için ve k hala 0 olduğu için tekrardan while
                                                             döngüsüne başlar.
oyun()                                                       # fonksiyonu buraya kadar yazdık ve burda çağırıyoruz çağırmadığımız taktirde fonksiyon çalışmaz.
